pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: docker-builder
            image: docker:latest
            command:
            - cat
            tty: true
        '''
    }
  }
  stages {
    stage('Build docker') {
      steps {
        container('docker-builder') {
          checkout scm
          sh 'ls -ls'
          sh 'sudo apt install python3.8'
        }
      }
    }
  }
}
